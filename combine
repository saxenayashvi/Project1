app.py code :-

import streamlit as st
from pathlib import Path

# ---------------- PAGE CONFIG ----------------
st.set_page_config(
    page_title="BI4BI - EY Landing Page",
    layout="wide"
)

# ---------------- EY THEME CSS (external) ----------------
def load_css(file_name: str):
    css_path = (Path(__file__).parent / file_name).resolve()
    with css_path.open("r", encoding="utf-8") as f:
        st.markdown(f"<style>{f.read()}</style>", unsafe_allow_html=True)

load_css("style.css")

# ---------------- MAIN CARD ----------------

# (Optional) top spacing can be removed since we're vertically centering
# st.markdown("<br><br><br>", unsafe_allow_html=True)

# Begin centering wrapper
st.markdown('<div class="center-wrapper">', unsafe_allow_html=True)

# Center the card using columns
col_left, col_center, col_right = st.columns([1, 2.5, 1])

with col_center:
    # Title
    st.markdown(
        """
        <div class="title">BI4BI</div>
        """,
        unsafe_allow_html=True
    )

    # Description Text
    st.markdown(
        """
        <div class="desc">
            BI4BI helps analyze existing BI reports, identify redundancies,
            and provide recommendations to rationalize and modernize<br>
            legacy BI environments using metadata-driven insights.
        </div>
        """,
        unsafe_allow_html=True
    )

    # Button Centered
    col_btn1, col_btn2, col_btn3 = st.columns([1, 2, 1])
    with col_btn2:
        st.button("Begin->")

    # Footer
    st.markdown(
        """
        <div class="footer" style="text-align:center;">
            ¬©Ô∏è 2024 EYGM Limited. All Rights Reserved.
        </div>
        """,
        unsafe_allow_html=True
    )

# Close centering wrapper
st.markdown('</div>', unsafe_allow_html=True)


